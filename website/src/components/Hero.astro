---
import { Icon } from 'astro-icon';

import Nav from '../components/Nav.astro';
import Player from '../components/Player.astro';
---
<header class="Hero">
  <div class="Hero__head">
    <!-- <Nav/> -->
  </div>
  <div class="Hero__body">
    <div class="Hero__wrap">
      <div class="Hero__intro">
        <Icon class="Hero__logo" name="logo"/>
        <h2 class="Hero__tagline">An unofficial Flipnote animation player for the Panic Playdate</h2>
      </div>
      <div class="Hero__gfx">
        <Player/>
      </div>
      <div class="Hero__sub">
        <h2 class="Hero__tagline">Coming Soon</h2>
        <!-- <button class="Hero__downloadButton Button">Download</button> -->
      </div>
    </div>
  </div>
  <div class="Hero__foot"></div>
</header>

<style lang="scss">
  .Hero {
    overflow-x: hidden;
    overflow-y: hidden;
    display: flex;
    flex-direction: column;
    z-index: 0;

    height: 100vh;
    // clamp height
    min-height: 760px;
    max-height: 1200px;

    background-position: center top;
    background-repeat: repeat;
    background-image: url('data:image/svg+xml;charset=utf8,\
      <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 32 32">\
        <rect x="0" y="0" width="33" height="33" fill="white" stroke-width="1" stroke-dashoffset="2" stroke-dasharray="4 4" stroke="%23B5C1CE"/>\
      </svg>\
    ');
  }

  .Hero__head {
    margin-bottom: auto;
  }

  .Hero__body {
    @include wrapper;
  }

  .Hero__wrap {
    display: grid;
    align-items: center;
    grid-template-columns: 1fr;
    @include breakpoint-tablet {
      grid-template-columns: 1fr 1.055fr;
    }
  }

  .Hero__intro {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    @include breakpoint-tablet {
      grid-column: 1;
      align-self: flex-end;
    }
  }

  .Hero__logo {
    @include breakpoint-tablet {
      // grid-column: 1;
      margin: 0 auto;
      max-width: 512px;
    }
  }

  .Hero__tagline {
    color: $color-text-alt;
    font-weight: normal;
    font-size: 1.2rem;
    margin-bottom: .5rem;
    max-width: 25ch;
  }

  .Hero__gfx {
    @include breakpoint-tablet {
      grid-column: 2;
      grid-row: 1 / span 2;
    }
  }

  .Hero__sub {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    @include breakpoint-tablet {
      grid-column: 1;
      align-self: flex-start;
    }
  }

  .Hero__foot {
    margin-top: auto;
    @include wrapper;
  }
</style>